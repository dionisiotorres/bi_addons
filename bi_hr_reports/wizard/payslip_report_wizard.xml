<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="emp_payslip_report_wizard_form" model="ir.ui.view">
            <field name="name">emp.payslip.report.form.view</field>
            <field name="model">payslip.employee.wizard.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="4" string="Duration">
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                        </group>
                        <group string="Departments">
                            <field name="department_ids" options="{'no_create':True}" nolabel="1"
                                   widget="many2many_tags"/>
                        </group>
                        <group string="Filters" col="4">
                            <field name="company_id" widget="selection"/>
                            <field name="state" widget="radio" required="1" options="{'horizontal': true}"/>
                            <field name="group_by" widget="radio" required="1"/>
                        </group>

                        <group>
                            <group string="Salary Structures">
                                <field name="salary_struct_ids" options="{'no_create':True}" nolabel="1"
                                       widget="many2many_tags"/>
                            </group>
                            <group string="Salary Rules" attrs="{'invisible': [('group_by', '!=', 'salary_rules')]}">
                                <field name="rules_ids" widget="many2many_tags" nolabel="1"
                                       options="{'no_create':True}"/>
                            </group>
                            <group string="Salary Rules Categories"
                                   attrs="{'invisible': [('group_by', '!=', 'salary_categories')]}">
                                <field name="categories_ids" widget="many2many_tags" nolabel="1"
                                       options="{'no_create':True}"/>
                            </group>
                        </group>

                        <footer>
                            <button string="Confirm" name="get_payroll_data" type="object"
                                    style="background-color:#68465f;border-radius: 3px;color:white"/>
                            or
                            <button special="cancel" string="Cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="emp_payslip_report_wizard_action" model="ir.actions.act_window">
            <field name="name">Payslip Report Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">payslip.employee.wizard.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
